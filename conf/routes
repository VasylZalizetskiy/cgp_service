# tags:
#   - Codes of golden proportion
# security: []
# parameters:
#   - name: value
#     in: query
#     type: number
#     format: double
#     required: true
#     description: Decimal value
#   - name: precision
#     in: query
#     type: integer
#     format: int32
#     description: Desired precision
###
GET           /golden                                                       controllers.GoldenProportionController.getGoldenProportionCode

